<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EAEC">

    <!-- 健康小贴士按钮 -->
    <Button
        android:id="@+id/healthTipsButton"
        android:layout_width="162dp"
        android:layout_height="107dp"
        android:text="健康小贴士"
        app:layout_constraintEnd_toStartOf="@+id/consultButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- 症状咨询按钮 -->
    <Button
        android:id="@+id/consultButton"
        android:layout_width="162dp"
        android:layout_height="107dp"
        android:text="症状咨询"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/healthTipsButton"
        app:layout_constraintTop_toTopOf="@+id/healthTipsButton" />

    <!-- 图片 -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="423dp"
        android:layout_height="316dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="@+id/consultButton"
        app:layout_constraintStart_toStartOf="@+id/healthTipsButton"
        app:layout_constraintTop_toBottomOf="@+id/healthTipsButton"
        app:srcCompat="@drawable/text_image" />

    <!-- 返回按钮 -->
    <Button
        android:id="@+id/button5"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:text="返回"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/consultButton"
        app:layout_constraintStart_toStartOf="@+id/healthTipsButton" />

    <!-- 顶部图标 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="414dp"
        android:layout_height="337dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/r_c__1_" />

</androidx.constraintlayout.widget.ConstraintLayout>
